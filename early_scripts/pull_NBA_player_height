import requests
from bs4 import BeautifulSoup
import re

# Function to scrape the height of any player
def scrape_NBA_height(url):
    try:
        # Send a GET request to the URL
        response = requests.get(url)
        response.raise_for_status()

        # Parse the HTML content with BeautifulSoup
        soup = BeautifulSoup(response.content, 'html.parser')

        # Regular expression pattern to match heights (ranging from 4-0 to 8-11)
        height_pattern = re.compile(r'([4-8]-\d{1,2})')

        # Find the <p> tag that contains the height using regex search
        height_element = soup.find('p', string=height_pattern)

        if height_element:
            # Extract the height from the matched pattern
            height_match = height_pattern.search(height_element.text)
            if height_match:
                height = height_match.group(0)
                print(f"Player height: {height}")
            else:
                print("Height not found.")
        else:
            print("Height element not found.")

    except requests.exceptions.RequestException as e:
        print(f"Error while scraping the webpage: {e}")

# URL of the page you want to scrape (replace with the actual player page URL)
url = 'https://www.basketball-reference.com/players/j/jamesbr02.html'  # Replace this with the actual URL

# Call the function to scrape the height
scrape_NBA_height(url)
